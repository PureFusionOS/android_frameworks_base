<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Should we listen for fingerprints when the screen is off?  Devices
         with a rear-mounted sensor want this, but certain devices have
         the sensor embedded in the power key and listening all the time
         causes a poor experience. -->
    <bool name="config_fingerprintWakeAndUnlock">true</bool>

    <!-- App side bar -->
    <style name="AppSidebarItemText" >
        <item name="android:textColor">@color/sidebar_item_text_color</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/sidebar_item_text_shadow_color</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>  

    <!-- OmniJaws QS -->
    <style name="TextAppearance.StatusBar.Expanded.Weather">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Pixel home animation -->
    <style name="DotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
