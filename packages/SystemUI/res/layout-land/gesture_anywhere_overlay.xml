<com.android.systemui.chaos.lab.gestureanywhere.GestureAnywhereView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="20dp"
    android:layout_height="40dp"
    android:layout_gravity="left|center_vertical"
    android:background="#00000000"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gesture_anywhere_overlay_background"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.gesture.GestureOverlayView
            android:id="@+id/gesture_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gestureColor="@color/gesture_color"
            android:gestureStrokeType="single"
            android:gestureStrokeWidth="16.0"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:targetApi="donut" />

        <TextView
            android:id="@+id/gesture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:orientation="horizontal"
            android:padding="24dp"
            android:text="@string/gestures_message"
            android:textColor="#24a599"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/cancel_gesturing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="15dp"
            android:src="@drawable/btn_ga_cancel_gesturing" />
    </FrameLayout>

</com.android.systemui.chaos.lab.gestureanywhere.GestureAnywhereView><!-- ChaosLab: GestureAnywhere - END -->
